<resources>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--====================== text_color_primary_alpha_80 =====================-->
    <!--  text_color_primary_alpha_80  wrap_wrap -->
    <style name="text_color_primary_alpha" parent="wrap_wrap">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <!--  text_color_primary_alpha_80_18 18sp wrap_wrap -->
    <style name="text_color_primary_alpha_18" parent="text_color_primary_alpha">
        <item name="android:textSize">18sp</item>
    </style>
    <!--  text_color_primary_alpha_80_16 16sp wrap_wrap -->
    <style name="text_color_primary_alpha_16" parent="text_color_primary_alpha">
        <item name="android:textSize">16sp</item>
    </style>
    <!--  text_color_primary_alpha_80_14 14sp wrap_wrap -->
    <style name="text_color_primary_alpha_14" parent="text_color_primary_alpha">
        <item name="android:textSize">14sp</item>
    </style>

    <!--====================== text_color_primary_alpha_80 =====================-->
    <style name="text_color_primary_alpha_80" parent="wrap_wrap">
        <item name="android:textColor">@color/text_color_primary_alpha_80</item>
    </style>

    <style name="text_color_primary_alpha_80_14" parent="text_color_primary_alpha_80">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_color_primary_alpha_80_12" parent="text_color_primary_alpha_80">
        <item name="android:textSize">12sp</item>
    </style>

    <!--====================== text_color_primary_alpha_60 =====================-->
    <style name="text_color_primary_alpha_60" parent="wrap_wrap">
        <item name="android:textColor">@color/text_color_primary_alpha_60</item>
    </style>

    <style name="text_color_primary_alpha_60_14" parent="text_color_primary_alpha_60">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_color_primary_alpha_60_12" parent="text_color_primary_alpha_60">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SystemTextStyle" parent="text_color_primary_alpha_60_14">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/shape_pink_border</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>
